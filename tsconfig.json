{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "lib": [
      "dom",
      "es2017",
      "esnext.asynciterable",
      "esnext.array"
    ],
    "moduleResolution": "node",
    "outDir": "./dist",
    "paths": {
      "@barrel-alias": ["./test/barrel/index.ts"]
    },
    "sourceMap": false,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "esnext",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
